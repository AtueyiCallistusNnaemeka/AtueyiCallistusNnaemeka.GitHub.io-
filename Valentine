    <button onclick="answerYes()">Yes, I'd love to!</button>
    <button onclick="answerNo()">Sorry, I can't</button>

    <script>
        function answerYes() {
            alert("Thank you! You've made me the happiest. Happy Valentine's Day!");
        }

        function answerNo() {
            alert("That's okay. I still appreciate you. Happy Valentine's Day!");
        }
